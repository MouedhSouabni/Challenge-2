{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,

        "noImplicitReturns": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "declaration": true,
        "target": "esnext",
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "noUnusedLocals": false,
        "types": [ "node" ]
    },
    "include": [
        "./src/**/*"
    ]
}